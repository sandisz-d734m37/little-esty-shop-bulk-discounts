<h1>Edit discount <%= @discount.id %></h1>

<%= form_with method: :patch, url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", local: true do |f| %>
  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold, value: @discount.quantity_threshold %>
  <br/><br/>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, value: @discount.percentage %>
  <br/><br/>
  <%= f.submit %>
<% end %>


